<% provide :button_text, t("micropost.post")%>
<%= form_for @micropost do |f| %>
  <%= render "shared/error_messages", object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: t("alert.compose_new_post") %>
  </div>
  <%= f.submit yield(:button_text), class: "btn btn-primary" %>

  <span class="picture"> 
    <%= f.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
  </span>
<% end %>

<%= javascript_include_tag "micropost_photo_size"%>
