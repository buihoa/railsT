<% provide(:title, "Log In") %> 
<h1> <%= t "login" %> </h1>

<div class="row">
    <div class="col-md-6 cl-md-offset-3">
        <%= form_for(:session, url: login_path) do |f| %>

            <%= f.label :email %>
            <%= f.email_field :email, class: "form-control" %>

            <%= f.label t "form.password" %>
            <%= f.password_field :password, class: "form-control" %>

            <%= f.label t "form.remember_me", class: "checkbox inline" do %>
                <%= f.check_box :remember_me %>
                <span><%= t "form.remember_me" %></span>
            <% end %>
            <%= f.submit t("form.log_in") , class: "btn btn-primary" %>
            <% end %>
            
            <p> <%= t "form.new_user" %> <%= link_to t("sign_up_now"), signup_path %></p>
    </div>
</div>
