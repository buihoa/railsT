<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render "shared/user_info" %>
      </section>
       <section class="stats">
        <%= render "shared/stats" %>
      </section>
      <section class="micropost_form">
        <%= render "shared/micropost_form" %>
      </section>
    </aside>
    
    <div class="col-md-8">
      <h3><%= t("micropost.name")%></h3>
      <%= render "shared/feed" %>
    </div>
  </div>
  <% else %>

<div class="center jumbotron">
  <% provide :title, t("home") %>
<h1><%= t "sampleApp" %></h1>
<p>
  <div><%= t ("texts.home_intro") %></div>
  <%= link_to t("texts.sample_app"), Settings.links.ruby_on_rails %>
  <div>
  <%= link_to t("signUpNow"), signup_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>

<%= link_to image_tag("rails.png", alt: "Rails logo"),
            Settings.links.ruby_on_rails %>
</p>
<% end %>
